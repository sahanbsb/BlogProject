    <servlet>
        <servlet-name>New_Post</servlet-name>
        <servlet-class>control.New_Post</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>view.Welcome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>New_Post</servlet-name>
        <url-pattern>/new_post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    
